{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      // UI package (canonical + broad)
      "@ui/shared": ["packages/ui/src/index.ts"],
      "@ui/shared/*": ["packages/ui/src/*"],
      "@ui/*": ["packages/ui/src/*"],

      // Lib package (canonical + broad)
      "@lib/shared": ["packages/lib/src/index.ts"],
      "@lib/shared/*": ["packages/lib/src/*"],
      "@lib/*": ["packages/lib/src/*"],

      // Config package (canonical + broad)
      "@config/shared": ["packages/config/src/index.ts"],
      "@config/shared/*": ["packages/config/src/*"],
      "@config/*": ["packages/config/*"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}
