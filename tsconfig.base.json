{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@world-quest/lib": ["packages/lib/src"],
      "@world-quest/ui": ["packages/ui/src"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}
